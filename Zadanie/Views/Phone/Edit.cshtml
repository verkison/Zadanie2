@model Models.RefModels.Phone

@{
    ViewBag.Title = "Edytowanie";
}

<div style="font-family:Arial">
    <h2>Edytuj numer telefonu klienta</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)

            <div class="form-group">
                @Html.HiddenFor(model => model.Customer.ID)
                @Html.LabelFor(model => model.Customer, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.Raw(ViewBag.CustomerData)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PhoneContent, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PhoneContent, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.Hidden("CustomerID", (object)ViewBag.CustomerID)
                    <input type="submit" value="Zapisz" class="btn btn-success" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Wróć do klienta", "Details", "Customer", new { id = Model.Customer.ID }, null)
    </div>
</div>

