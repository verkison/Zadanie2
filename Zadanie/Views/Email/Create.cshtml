@model Models.RefModels.Email

@{
    ViewBag.Title = "Dodawanie";
}

<div style="font-family:Arial">
    <h2>Dodawanie adresu email klientowi</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Customer.ID, null, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.Raw(ViewBag.CustomerData)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.EmailContent, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.EmailContent, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EmailContent, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Stwórz" id="id" class="btn btn-success" />
                </div>
            </div>
        </div>
    }

    <div>
        <p>
            @Html.ActionLink("Wróć do listy", "Index", "Customer", null, null) |
            @Html.ActionLink("Wróć do klienta", "Details", "Customer", new { id = ViewBag.id }, null)
        </p>

    </div>
</div>
